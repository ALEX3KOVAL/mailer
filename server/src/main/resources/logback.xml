<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %X{call-id} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="MAILER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>logs/mailer/error/log_%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- keep 5 days' worth of history capped at 10MB total size -->
            <maxHistory>5</maxHistory>
            <totalSizeCap>10MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>%date [%thread] %-5level %X{call-id} %logger{36} -%kvp- %msg%n</pattern>
        </encoder>
    </appender>
    <root>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="MAILER"/>
    </root>
    <logger name="com.zaxxer.hikari" level="INFO"/>
</configuration>